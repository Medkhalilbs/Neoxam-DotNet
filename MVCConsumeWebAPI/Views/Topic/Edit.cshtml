@model MVCConsumeWebAPI.Models.topic

@{
    ViewBag.Title = "Edit";
}






@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">

        <div class="col-lg-11">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Modifier le sujet</h2>
                    <form class="form p-t-20">
                        @Html.AntiForgeryToken()


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)


                        <div class="form-group">
                            <label>Modifier le nom de sujet</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon11"><i class="icon-folder-alt"></i></span>
                                </div>
                                <div class="col-11">
                                    @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <label>Modifier le nombre de question</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon11"><i class="ti-more-alt"></i></span>
                                </div>
                                <div class="col-11">
                                    @Html.EditorFor(model => model.nombre_question, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.nombre_question, "", new { @class = "text-danger" })
                                </div>


                            </div>
                        </div>

                        <div class="form-group">
                            <label>Durée examen</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon11"><i class="ti-time"></i></span>
                                </div>
                                <div class="col-11">
                                    @Html.EditorFor(model => model.dureeTopic, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.dureeTopic, "", new { @class = "text-danger" })</div>

                            </div>
                        </div>

                      
                        <button type="submit" class="btn btn-warning m-r-10"> <i class="ti-save"></i> Modifier</button>
                        <button type="submit" class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


 
}
